@model HTTP5112Assignment5.Models.Teacher
@{
    ViewBag.Title = "Show";
}

<a class="navlink" href="/Teacher/List">Back To Teachers</a>
<a class="navlink" href="/Teacher/Update/@Model.TeacherId">Update</a>
<a class="navlink" href="/Teacher/DeleteConfirm/@Model.TeacherId" style="color: red;">Delete Teacher</a>

<div id="containershow">
    <h2>@Model.TeacherFname @Model.TeacherLname</h2>
    <p>Teacher Employee Number: @Model.EmployeeNumber</p>
    <p>Teacher Hire Date: @Model.HireDate</p>
    <p>Teacher Salary: @Model.Salary</p>
    @if (ViewBag.classes.Count > 0)
    {
        <p>classes</p>
        <ul>
            @foreach (var Class in ViewBag.classes)
            {
                <li><a href="/Class/Show/@Class.ClassId">@Class.ClassCode - @Class.ClassName</a></li>
            }
        </ul>
    }
    else
    {
        <p>This teacher does not teach any classes right now.</p>
    }
</div>
